<UserControl x:Class="DemoBasic.Views.SelectionUserControls.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoBasic.Views.SelectionUserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="540">
    <Border
        CornerRadius="10"
        Background="Transparent"
        >
        <Grid
            Width="540" Height="450"
            Background="#07889B"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Products" FontSize="25"/>
        </Grid>
            
    </Border>
</UserControl>
